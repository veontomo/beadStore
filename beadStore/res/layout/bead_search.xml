<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/body"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context="com.veontomo.beadstore.BeadActivity" >

   
    <EditText
        android:id="@+id/beadColor"
        style="@style/beadColorInput"
        android:hint="@string/beadColorHint"
        android:inputType="phone">
    </EditText>

    <Button
        android:id="@+id/btnBeadFind"
        style="@style/btnBeadFind"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/beadColor"
        android:layout_toEndOf="@+id/beadColor"
        android:text="@string/btnFindByColor" />

    <ListView
        android:id="@+id/list"
        style="@style/beadList" 
        android:layout_below="@id/beadColor"/>

</RelativeLayout>